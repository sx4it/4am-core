%h1 Sign Up

= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  
  .field
    = f.label :login
    = f.text_field :login  

  .field
    = f.label :pass
    = f.password_field :pass  

  .actions
    = f.submit 'Submit'


= link_to 'Back', users_path
