= form_for @user, html: { class: 'form-horizontal' } do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :login
    .controls
      = f.text_field :login
  .control-group
    = f.label :pass
    .controls
      = f.text_field :pass
  .form-actions
    = f.submit 'Save', :class => "btn btn-success"
