
= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th= sortable 'login'
    %th Keys
    %th Actions

  
  - @users.each do |user|
    %tr
      %td= user.login
      %td= user.keys.count
      %td
        = link_to 'Show', user, class: "btn btn-small btn-info"
        = link_to 'Edit', edit_user_path(user), class: "btn btn-small btn-warning"
        = button_to 'Destroy', user, :method => :delete, class: "btn btn-small btn-danger"

= will_paginate @users

