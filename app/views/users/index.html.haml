%h2 Listing users

%table
  %tr
    %th Login
    %th Pass
    %th
    %th
    %th

  - @users.each do |user|
    %tr
      %td= user.login
      %td= user.pass
      %td= link_to 'Show', user, :class => "btn info"
      %td= link_to 'Edit', edit_user_path(user), :class => "btn warning"
      %td= link_to 'Destroy', user, :class => "btn danger", :confirm => 'Are you sure?', :method => :delete

%br

