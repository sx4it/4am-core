
= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]

= link_to 'Clear all finished commands', {:controller => :cmd, :machine_id => @machine, :action => :clear}, class: "btn btn-mini btn-warning"
%table.table.table-striped.table-condensed.table-bordered
  %tbody
    %tr
      %th Command Name
      %th Command
      %th Status
      %th When

    - @old_command.each do |cmd|
      %tr
        %td
          = link_to cmd.command.name, command_path(cmd.command.id)
          = link_to 'delete', machine_cmd_path(@machine, cmd.id), :method => :delete, class: "btn btn-mini btn-danger pull-right"
          = link_to 'stop', machine_cmd_path(@machine, cmd.id), :method => :put, class: "btn btn-mini btn-warning pull-right"
        %td
          %code= cmd.command.command
        %td
          = cmd.status
        %td
          = cmd.time

