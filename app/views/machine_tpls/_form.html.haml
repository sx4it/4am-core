= form_for @machine_tpl do |f|
  -if @machine_tpl.errors.any?
    #error_explanation
      %h2= "#{pluralize(@machine_tpl.errors.count, "error")} prohibited this machine_tpl from being saved:"
      %ul
        - @machine_tpl.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
