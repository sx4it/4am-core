= form_for @host , html: { class: 'form-horizontal'} do |f|

  -if @host.errors.any?
    .control-group
      .alert.alert-error
        %a.close{href: "#", data:{ dismiss:'alert' }} Ã—
        %h4.alert-heading= "#{pluralize(@host.errors.count, "error")} "
        %ul
          - @host.errors.full_messages.each do |msg|
            %li
              %p= msg
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  .control-group
    = f.label :ip, class: 'control-label'
    .controls
      = f.text_field :ip
  .control-group
    = f.label :host_tpl_id, class: 'control-label'
    .controls
      = f.text_field :host_tpl_id
  .form-actions
    = f.submit 'Save', class: "btn btn-info"
