
= render 'header', type: :list

#hosts

  .widget.widget-table
    .widget-header
      %i.icon-th-list
      %h3
        User list
      .search.input-append
        //%input.span2{:size => "16", :type => "text"}
        = text_field_tag :search, params[:search], class: 'span2'
        %a.btn{ :href => "javascript:users_search.submit()" }
          %i.icon-search
  
    .widget-content
      %table.table.table-striped.table-bordered
        %thead
          %tr
            %th #
            %th Name
            %th Ip
            %th Port
            %th Template
            %th Actions
        %tbody
          - @hosts.each do |host|
            %tr
              %td= host.id
              %td= host.name
              %td= host.ip
              %td= host.port
              %td= host.host_tpl_id
              %td.action-td
                = host.class.model_name
