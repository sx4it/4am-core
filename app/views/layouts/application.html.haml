<!DOCTYPE html>

%html{html_attrs}

  %head
    %meta{"http-equiv"=>"Content-type", :content=>"text/html;charset=utf-8"}
    %title 4am

    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"

    %link{ rel: "shortcut icon", href: image_path("favicon.png"), type: "image/x-icon" }

    //= csrf_meta_tags 

  %body

    #main

      .navbar.navbar-fixed-top{"data-scrollspy" => "scrollspy"}
        .navbar-inner
          .container
            %a.brand
            %ul.nav
              - if current_user
                = render file: 'layouts/menu'
              %li
                %a{href: "#about"} About

            - if current_user
              = link_to 'Logout', 'logout', class: 'logout btn btn-danger'

      .container.well

        - if flash[:notice]
          #flash_warning.alert
            %a.close{href: "#", data:{ dismiss:'alert' }} ×
            %strong= flash[:notice]
  
        - if flash[:error]
          #flash_error.alert.alert-error
            %a.close{href: "#", data:{ dismiss:'alert' }} ×
            %strong= flash[:error]

        = yield

