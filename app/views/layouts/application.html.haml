<!DOCTYPE html>

%html{html_attrs}

  %head
    %title 4am

    %meta{"http-equiv"=>"Content-type", :content=>"text/html;charset=utf-8"}

    = stylesheet_link_tag    "app"
    = yield :stylesheet_custom

    = javascript_include_tag "manifest"
    = yield :javascript_custom

    %link{ rel: "shortcut icon", href: image_path("favicon.png"), type: "image/x-icon" }

    = csrf_meta_tags 

  %body

    #main

      .navbar.navbar-fixed-top{"data-scrollspy" => "scrollspy"}
        .navbar-inner
          .container
            %a.brand{href: "/"}

            = render partial: 'layouts/menu'


      .container.content
        .row
          .span12

            - if flash[:notice]
              #flash_warning.alert
                %a.close{href: "#", data:{ dismiss:'alert' }} ×
                %strong= flash[:notice]

            - if flash[:error]
              #flash_error.alert.alert-error
                %a.close{href: "#", data:{ dismiss:'alert' }} ×
                %strong= flash[:error]

            = yield

