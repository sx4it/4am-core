<!DOCTYPE html>

%html{html_attrs}

  %head
    %meta{"http-equiv"=>"Content-type", :content=>"text/html;charset=utf-8"}
    %title 4am

    = stylesheet_link_tag    "application"

    %link{ rel: "shortcut icon", href: image_path("favicon.png"), type: "image/x-icon" }

    = csrf_meta_tags 

  %body

    #main

      .navbar.navbar-fixed-top{"data-scrollspy" => "scrollspy"}
        .navbar-inner
          .container
            %a.brand{href: "/"}
            %ul.nav
              - if current_user
                = render file: 'layouts/menu'
              %li.icon.icon_help
                %a{href: "#about"} Help
              %li.icon.icon_info
                %a{href: "#about"} About

            - if current_user

              %div.logout.btn-group
                %a.btn.btn-primary{ href: user_path(current_user)}
                  %i.icon-white.icon-user
                  = current_user.login.capitalize
                %a.btn.btn-primary.dropdown-toggle{ href: '#', :data => {:toggle => "dropdown"}}
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{ href: keys_user_path(current_user) }
                      %i.icon.icon-cog
                      My Keys
                  %li
                    %a{ href: logout_path }
                      %i.icon-off
                      Logout

      .container.well

        - if flash[:notice]
          #flash_warning.alert
            %a.close{href: "#", data:{ dismiss:'alert' }} ×
            %strong= flash[:notice]

        - if flash[:error]
          #flash_error.alert.alert-error
            %a.close{href: "#", data:{ dismiss:'alert' }} ×
            %strong= flash[:error]

        = yield
  = javascript_include_tag "application"
