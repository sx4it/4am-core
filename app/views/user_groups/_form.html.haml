= form_for @user_group, html: { class: 'form-horizontal' }  do |f|
  -if @user_group.errors.any?
    .control-group
      .alert.alert-error
        %a.close{href: "#", data:{ dismiss:'alert' }} Ã—
        %h4.alert-heading= "#{pluralize(@user_group.errors.count, "error")} "
        %ul
        - @user_group.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  - unless @user_group.id.nil?
    .control-group
      %label.control-label Users in group
      .controls
        - @user_group.user.each do |u|
          %li.active
            %b.label.label
              = u.login
              #{link_to 'x', url_for({:controller => :user_groups, :id => @user_group, :user_id => u, :action => :del_user}), :method => :delete}
    .control-group
      %label.control-label Users available
      .controls
        - @users.each do |u|
          - unless @user_group.user.include? u
            %li.active
              %b.label.label-success
                = u.login
                #{link_to '+', url_for({:controller => :user_groups, :id => @user_group, :user_id => u, :action => :add_user}), :method => :post}
  .form-actions
    = f.submit 'Save', class: "btn btn-info"
