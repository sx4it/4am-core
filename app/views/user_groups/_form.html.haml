= form_for @user_group, html: { class: 'form-horizontal' }  do |f|
  -if @user_group.errors.any?
    .control-group
      .alert.alert-error
        %a.close{href: "#", data:{ dismiss:'alert' }} Ã—
        %h4.alert-heading= "#{pluralize(@user_group.errors.count, "error")} prohibited this user from being saved:"
        %ul
        - @user_group.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name
  - unless @user_group.id.nil?
    .control-group
      %label.control-label Users in group
      .controls
        - @user_group.user.each do |u|
          %a.btn.btn-small.btn-danger{href: url_for({:controller => :user_groups, :user_group_id => @user_group, :user_id => u, :action => :del_user})}
            %i.icon-white.icon-remove
            =u.login
    .control-group
      %label.control-label Users available
      .controls
        - @users.each do |u|
          - unless @user_group.user.include? u
            %a.btn.btn-small.btn-success{href: url_for({:controller => :user_groups, :user_group_id => @user_group, :user_id => u, :action => :add_user})}
              %i.icon-white.icon-plus-sign
              =u.login
  .form-actions
    = f.submit 'Save', class: "btn btn-info"
