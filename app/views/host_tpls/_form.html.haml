= form_for @host_tpl do |f|
  -if @host_tpl.errors.any?
    #error_explanation
      %h2= "#{pluralize(@host_tpl.errors.count, "error")} prohibited this host_tpl from being saved:"
      %ul
        - @host_tpl.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
