
%section#forms
  %h2 Login
  
  //%h2 Connect to the admin space
  //%p If you wish to connect without your X509 certificate, please use this form
  = form_tag sessions_path, :class => 'form-horizontal' do
    %fieldset
      .control-group
        = label_tag :login
        .controls
          = text_field_tag :login, params[:login], :size => 30
      .control-group
        = label_tag :pass
        .controls
          = password_field_tag :pass, params[:pass], :size => 30
    .form-actions
      = submit_tag 'Login', :class => "btn btn-success"

