
%section#forms
  %h2Login
  
  //%h2 Connect to the admin space
  //%p If you wish to connect without your X509 certificate, please use this form
  = form_tag sessions_path do
    %fieldset
      .clearfix
        = label_tag :login
        .input
          = text_field_tag :login, params[:login], :size => 30
      .clearfix
        = label_tag :pass
        .input
          = password_field_tag :pass, params[:pass], :size => 30
    .actions
      = submit_tag 'Login', :class => "btn primary"

